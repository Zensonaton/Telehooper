	"version": "0.2.0",
	"configurations": [
		{
			"name": "Python: Запустить Telegram-бота",
			"type": "python",
			"request": "launch",
			"program": "${workspaceFolder}/src/main.py",
			"console": "integratedTerminal"
		},

		{
			"name": "Python: Запустить скрипт для быстрого создания Telegram-групп",
			"type": "python",
			"request": "launch",
			"program": "${workspaceFolder}/src/GroupsCreator/main.py",
			"console": "integratedTerminal",
			"cwd": "${workspaceFolder}/src/GroupsCreator"
		},

		{
			"name": "Python: Запустить текущий файл",
			"type": "python",
			"request": "launch",
			"program": "${file}",
			"console": "integratedTerminal"
		}
	]
}
